---
NestedIterators:
  max_allowed_nesting: 3
IrresponsibleModule:
  enabled: false
DuplicateMethodCall:
  max_calls: 2
Attribute:
  enabled: false
TooManyInstanceVariables:
  max_instance_variables: 10
TooManyStatements:
  max_statements: 10
UtilityFunction:
  public_methods_only: true
"app/helpers":
  UtilityFunction:
    enabled: false
"app/services":
  UtilityFunction:
   enabled: false
  FeatureEnvy:
   enabled: false
"app/controllers":
  InstanceVariableAssumption:
   enabled: false

exclude_paths:
  - tmp
  - spec
  - vendor
  - log
  - coverage
  - config
  - bin
  - db/migrate
