---
UtilityFunction:
  public_methods_only: true
NestedIterators:
  max_allowed_nesting: 2
IrresponsibleModule:
  enabled: false
DuplicateMethodCall:
  max_calls: 2
Attribute:
  enabled: false
TooManyInstanceVariables:
  max_instance_variables: 20
"app/helpers":
  UtilityFunction:
    enabled: false

exclude_paths:
  - tmp
  - spec
  - vendor
  - log
  - coverage
  - config
  - bin
  - db/migrate
